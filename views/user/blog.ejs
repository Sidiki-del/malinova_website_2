	<%- include("partials/header"); -%>

    <!-- breadcrumb-area start --> 
    <div class="breadcrumb-area">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="breadcrumb_box text-center">
                        <h2 class="breadcrumb-title">Blog</h2>
                        <!-- breadcrumb-list start -->
                        <ul class="breadcrumb-list">
                            <li class="breadcrumb-item"><a href="/">Accueil</a></li>
                            <li class="breadcrumb-item active">Blog</li>
                        </ul>
                        <!-- breadcrumb-list end -->
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- breadcrumb-area end -->











    <div id="main-wrapper">
        <div class="site-wrapper-reveal">



            <!--====================   Blog Area Start ====================-->
            <div class="blog-pages-wrapper section-space--ptb_100">
                <div class="container">

                    <div class="row">
                        <div class="col-lg-12 order-lg-2 order-1">
                            <div class="section-title-wrap text-center section-space--mb_60">
                            </div>
                            <div class="main-blog-wrap">
                                <!--======= Single Blog Item Start ========-->
                                <div class="single-blog-item post-list-wrapper xs-list-blog-item border-bottom wow move-up">
                                 <div id="posts">

                                    <div class="row">
                                <% posts.forEach(function(post){ %> 

                                        <div class="col-lg-6" id="post-<%= post._id %>">
                                            <!-- Post Feature Start -->
                                            <div class="post-feature blog-thumbnail">
                                                <a href="blog-post-layout-one.html">
                                                    <% if(post.image){ %>
                                                    <img class="img-fluid" src="<%= post.image %>" alt="Blog Images">
                                                    <% } else { %>
                                                        <img class="img-fluid" src="http://placehold.it/750x300" alt="Blog Images">
                                                    <% } %>
                                                </a>
                                            </div>
                                            <!-- Post Feature End -->
                                        </div>

                                        <div class="col-lg-6">
                                            <!-- Post info Start -->
                                            <div class="post-info lg-blog-post-info">
                                                <h4 class="post-title">
                                                    <a href="blog-post-layout-one.html"><%= post.title  %></a>
                                                </h4>

                                                <div class="post-meta mt-20">
                                                   
                                                    <div class="post-date">
                                                        <span class="far fa-calendar meta-icon"></span>
                                                        January 14, 2019
                                                    </div>
                                                   
                                                </div>

                                                <div class="post-excerpt mt-15">
                                                    <p><%-post.content.substring(0, 08) + " ..."%></p>
                                                </div>


                                                <div class="read-post-share-wrap mt-30">
                                                    <div class="post-read-more">
                                                        <a href="admin/posts/<%= post._id %>" class="ht-btn ht-btn-md">Read more </a>
                                                    </div>
                                                </div>
                                            </div>
                                            <!-- Post info End -->
                                        </div>
                                         <%  }); %>
                                    </div>
                                    </div>

                                </div>
                                <!--===== Single Blog Item End =========-->

                                
                                
                               
                                <!--===== Single Blog Item End =========-->

                                <!-- <div class="ht-pagination mt-30 pagination justify-content-center">
                                    <div class="pagination-wrapper">
                                        <ul class="page-pagination">
                                            <li><a class="prev page-numbers" href="#">Prev</a></li>
                                            <li><a class="page-numbers current" href="#">1</a></li>
                                            <li><a class="page-numbers" href="#">2</a></li>
                                            <li><a class="next page-numbers" href="#">Next</a></li>
                                        </ul>
                                    </div>
                                </div> -->

                            </div>
                        </div>
                       
                    </div>
                </div>
            </div>
            <!--====================  Blog Area End  ====================-->



















        </div> 

        <!--====================  footer area ====================-->
	<%- include("partials/footer_footer"); -%>
       
        <!--====================  End of footer area  ====================-->


    </div>
